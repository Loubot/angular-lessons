<div class="register_page_main_div">
  <div layout="row">
    <div flex="50">
      <form name="register_teacher_form" ng-submit="register_teacher()" novalidate>
        <md-input-container md-no-float>
          <input  type="email" 
                  ng-model="teacher.email"
                  ng-pattern="/^[^\s@]+@[^\s@]+\.[^\s@]{2,}$/" 
                  name="email1"
                  id="email1"
                  placeholder="Email" 
                  required>
        </md-input-container>

        <md-input-container md-no-float>
          <input  type="email" 
                  ng-model="teacher.confirm_email" 
                  ng-pattern="/^[^\s@]+@[^\s@]+\.[^\s@]{2,}$/" 
                  placeholder="Confirm Email" 
                  name="email2"
                  id="email2"
                  required>
          <div ng-messages="register_teacher_form.email2.$error">
            <div ng-message="matching_email">Emails don't match</div>
            <div ng-message="pattern">Not a valid email</div>
          </div>
        </md-input-container>
        <input type="submit" class="md-primary md-raised white_text">
      </form> 
    </div>
  </div>
</div>
