<div ng-controller="NavController" ng-cloak>
  <!-- Start of menu bar-->
  <div class="bottom_bit" layout="row" layout-align="space-around none" style="background-color: #f5f5f5;">
    
  </div>

  <div  layout-padding  style="height: 80px;background-color: #f5f5f5;">
    <div layout="row" class="gutter_90" layout-align="space-between ">

      <div >
        <a ui-sref="welcome"><img src="<%= asset_url 'small_logo.jpg' %>" alt="learn your lesson"></a>
      </div>

      <div hide-xs  ui-sref-active="active_bla" class="margin_t_10">
        <a class="black_text margin_r_10" ui-sref-active="active_bla white_text" ui-sref="contact">Contact Us</a>
      </div>

      <div hide-xs class="margin_t_10 no_padding">
        <md-menu>
         <!-- Trigger element is a md-button with an icon -->
         <span ng-click="open_subjects_menu($mdOpenMenu, $event)" class=" width_auto no_padding no_margin" aria-label="Open sample menu">
           Subjects <md-icon><i class="material-icons">keyboard_arrow_down</i></md-icon>
         </span>
         <md-menu-content width="4">
           <md-menu-item ng-repeat="s in subject_list_for_menu">
            <md-button ui-sref="search({ name: s.name })">{{ s.name }}</md-button>
          </md-menu-item>
         </md-menu-content>
        </md-menu>
      </div>

      <div hide-xs  class="margin_t_10">
        <a class="black_text" ui-sref-active="active_bla white_text" ui-sref="about">About Us</a>
      </div>

      <!-- Teacher/User menu mess -->

      <div ng-if="User && User.is_teacher" ng-includes="'includes\teacher_logged_in_menu'">
        
      </div>

      <div >

      </div>

      <!-- End of Teacher/User mess -->

    </div>
    
  </div>
  <!-- End of menu bar -->

  <!--#################### Content ############################-->

  <div class="main main_page" layout="column" id="main" flex>
    <div class="scroll_animate">
      <div class="main_page top_bit" id="main_page" ui-view ng-cloak>

      </div> <!-- angular view rendered here -->

      <div class="bottom_bit" layout="row" layout-align="space-around none">
        <div ><a class="white_text margin_r_10" ui-sref="contact">Contact Us</a></div>
        <div ><a class="white_text" ui-sref="about">About Us</a></div>
      </div>
    </div>
  </div>

  <!--#################### End of content ############################-->
</div>