<!DOCTYPE html>
<html ng-app="lessons">
<head>
  <title>AngularLessons</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <%= csrf_meta_tags %>
</head>
<body class="main_page">
  <div ng-controller="NavController" layout="column" style="height:500px;" ng-cloak>
    <section layout="row" flex>
      <md-sidenav class="sidenav white_text md-whiteframe=12" md-component-id="left">


        <div layout="column" layout-padding ng-cloak ng-if="!USER">
          <br/>
          <md-content class="md-no-momentum">
            <md-input-container ng-if="auth_type==1">
              <md-subheader>Register</md-subheader>
              <form ng-submit="register_teacher()" >
                <md-input-container class="md-icon-float md-block" >
                  <!-- Use floating label instead of placeholder -->
                  <label>First Name</label>
                  <md-icon class="name"></md-icon>
                  <input ng-model="teacher.name" type="text" required>
                </md-input-container>

                <!-- <md-input-container class="md-block">
                  <md-icon class="lastName"></md-icon>
                  <input ng-model="teacher.lastName" type="text" placeholder="Last Name" required>
                </md-input-container>
       -->
                <md-input-container class="md-block">
                  <!-- Use floating placeholder instead of label -->
                  <md-icon  class="email"></md-icon>
                  <input ng-model="teacher.email" type="email" placeholder="Email (required)" required>
                </md-input-container>
                
                <md-input-container class="md-block">
                  <!-- Use floating placeholder instead of label -->
                  <md-icon  class="password"></md-icon>
                  <input ng-model="teacher.password" type="password" placeholder="Password (required)" required>
                </md-input-container>

                
                <md-button class="md-primary" ng-click="register_teacher()"> 
                  Submit
                </md-button>
              </form>
            </md-input-container> <!-- end of ng-if="auth_type==1" -->

            <md-input-container ng-if="auth_type==0">
              <md-subheader>Login</md-subheader>
              <form ng-submit="login()" >

                <!-- <md-input-container class="md-block">
                  <md-icon class="lastName"></md-icon>
                  <input ng-model="teacher.lastName" type="text" placeholder="Last Name" required>
                </md-input-container>
       -->
                <md-input-container class="md-block">
                  <!-- Use floating placeholder instead of label -->
                  <md-icon  class="email"></md-icon>
                  <input ng-model="teacher.email" type="email" placeholder="Email (required)" required>
                </md-input-container>

                <md-input-container class="md-block">
                  <!-- Use floating placeholder instead of label -->
                  <md-icon  class="password"></md-icon>
                  <input ng-model="teacher.password" type="password" placeholder="Password (required)" required>
                </md-input-container>

                
                <md-button class="md-primary" ng-click="login()"> 
                  Submit
                </md-button>
              </form>
            </md-input-container> <!-- end of ng-if="auth_type==1" -->


            <button class="md-button md-default-theme" ng-click="openLeftMenu()"hide-gt-md="">
              <i class="material-icons">keyboard_arrow_left</i>
            </button>
          </md-content>
        </div>


      </md-sidenav>

      <div layout="column" layout-fill>
        <md-toolbar md-scroll-shrink aria-hidden="false" class="md-default-theme white_text" >
          <div class="md-toolbar-tools" layout="row" layout-align="space-around center">
            <md-fab-speed-dial ng-hide="demo.hidden" md-direction="down" md-open="demo.isOpen"
                             class="md-scale md-fab-top-left" ng-class="{ 'md-hover-full': demo.hover }"
                             >
              <md-fab-trigger>
                <md-button aria-label="menu" class="md-fab md-warn">
                  <md-tooltip md-direction="top" md-visible="tooltipVisible">Menu</md-tooltip>
                  <md-icon  aria-label="menu"><i class="material-icons">menu</i></md-icon>
                </md-button>
              </md-fab-trigger>

              <md-fab-actions ng-if="!USER" >
                <md-button class="md-button md-default-theme green_text" ng-click="openLeftMenu(0)">Login</md-button>
                <md-button class="md-button md-default-theme green_text" ng-click="openLeftMenu(1)">Register</md-button>
              </md-fab-actions> <!-- end of if !USER -->

              <md-fab-actions ng-if="USER" class="green_text">
                <md-button class="md-button md-default-theme green_text">Profile</md-button>
                <md-button class="md-button md-default-theme green_text" ng-click="logout()">Logout</md-button>
                <md-button class="md-button md-default-theme green_text">content</md-button>

              </md-fab-actions>

            </md-fab-speed-dial>
            <span flex="30"></span>
            <h4>Learn your lesson</h4>
            <img ui-sref="welcome" src="<%= asset_path('lylLogo.png') %>" class="md-48">
            <span flex="20"></span>
           
            <button class="md-button md-default-theme white_text" ng-click="openRightMenu()"><i class="material-icons">menu</i></button>
            
          </div> <!-- dnf of md-toolbar-tools -->
         
        </md-toolbar>
        <md-content class="main_page" ui-view class="main" layout-align="center">
          
        </md-content>
      </div> <!-- end of layout="column" -->

      <md-sidenav class="md-sidenav-right md-whiteframe-12dp" md-component-id="right" >
        <md-toolbar class="md-theme-light">
          <h1 class="md-toolbar-tools">Sidenav Right</h1>
        </md-toolbar>
        <md-content  layout-padding >
          <button class="md-button md-default-theme" ui-sref="register" md-ink-ripple="#FF0000">Become a teacher</button>
          <button ui-sref="how_it_works" class="md-button md-default-theme " md-ink-ripple="#FF0000">How it works</button><br>
          <button ui-sref="mailing_list" class="md-button md-default-theme " md-ink-ripple="#FF0000">
            Mailing list
          </button><br>
          <md-button ng-click="close()" class="md-primary">
            Close Sidenav Right
          </md-button>
        </md-content>
      </md-sidenav> <!-- end of md-sidenav right -->
    </section>
  </div>

<%= yield %>

</body>
</html>



